<div class="row">
  <div class="form-group">
    <label>Order</label>
    <%= number_field_tag "field[field_options][][position]", nil,  class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label>Image</label>
    <%= file_field_tag "field[field_options][][image]",  class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <label>Name</label>
    <%= text_field_tag "field[field_options][][name]", nil,  class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <label>Help</label>
    <%= text_area_tag "field[field_options][][help]", nil,  class: "form-control", required: "required" %>
  </div>
</div>