
- provide(:transcriptions, "active")
- provide(:admin, "active")

- provide(:title, strip_tags(t('transcriptions.transcriptions')))

h1 = t('transcriptions.transcriptions')

- if params[:review_transcriptions]
  a href="?" class="btn btn-sm btn-draw-accented"
    = t('transcriptions.view-all-transcriptions')
- else
  a href="?review_transcriptions=true" class="btn btn-sm btn-draw-accented"
    = t('transcriptions.view-transcriptions-ready-for-review')

